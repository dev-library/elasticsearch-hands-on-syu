<?xml version="1.0" encoding="UTF-8"?>
<configuration debug="true" scan="true">
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>

    <!-- Spring 설정 속성 추출 -->
    <springProperty scope="context" name="SPRING_APPLICATION_NAME" source="spring.application.name"/>
    <springProperty scope="context" name="FLUENTD_HOST" source="fluentd.host"/>
    <springProperty scope="context" name="FLUENTD_PORT" source="fluentd.port"/>
    <springProperty scope="context" name="FLUENTD_TAG" source="fluentd.tag"/>

    <!-- 로컬 파일 저장 -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>log/simplelogging.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>log/simplelogging.%d{yyyy-MM-dd}.log.gz</fileNamePattern>
        </rollingPolicy>
        <encoder>
            <pattern>{"@timestamp":"%d{yyyy-MM-dd'T'HH:mm:ss.SSSZ}", "level":"%level", "service":"${SPRING_APPLICATION_NAME}", "trace":"%X{traceId:-}", "span":"%X{spanId:-}", "thread":"%thread", "logger":"%logger", "message":"%msg"}%n</pattern>
        </encoder>
    </appender>

    <!-- 콘솔 로그 출력 -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <withJansi>true</withJansi>
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %highlight(%5level) %magenta(${PID:-}) --- [%15.15thread] [%X{traceId:-},%X{spanId:-}] %cyan(%logger{5}) : %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Fluentd HTTP 전송 -->
    <appender name="FLUENTD_HTTP" class="kr.sahmyook.handson.util.FluentdHttpAppender">
        <fluentdUrl>http://${FLUENTD_HOST}:${FLUENTD_PORT}</fluentdUrl>
        <tag>${FLUENTD_TAG}</tag>
    </appender>

    <!-- 루트 로그 설정 -->
    <root level="INFO">
        <appender-ref ref="FILE"/>
        <appender-ref ref="STDOUT"/>
        <appender-ref ref="FLUENTD_HTTP"/>
    </root>
</configuration>
